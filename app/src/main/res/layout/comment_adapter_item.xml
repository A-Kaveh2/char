<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginRight="@dimen/base_adapter_item_margin"
        android:layout_marginLeft="@dimen/base_adapter_item_margin"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:id="@+id/imageView_comment_adapter_more" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_margin="@dimen/base_adapter_item_text_margin"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ll_image"
            android:orientation="vertical">

            <ir.rasen.charsoo.ui.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:textSize="@dimen/font_size_comment_adapter_item_title"
                android:text="Large Text"
                android:id="@+id/textView_comment_adapter_item_title" />

            <ir.rasen.charsoo.ui.TextViewFont
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:text="Large Text"
                android:textSize="@dimen/font_size_base_adapter_item"
                android:id="@+id/textView_comment_adapter_item_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_image"
            android:layout_width="@dimen/base_adapter_item_height"
            android:layout_height="@dimen/base_adapter_item_height"
            android:layout_alignParentRight="true"
            android:gravity="center">

            <ir.rasen.charsoo.ui.ImageViewCircle
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/base_adapter_item_image_margin"
                android:layout_marginTop="@dimen/base_adapter_item_image_margin"
                android:id="@+id/imageView_comment_adapter_item_image"
                android:src="@drawable/ic_launcher"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>