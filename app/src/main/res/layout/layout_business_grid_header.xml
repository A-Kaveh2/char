<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_cover"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/post"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/ll_action_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_custome_height"
            android:gravity="right|center_vertical"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:background="@drawable/shape_gradiant_up">

            <ImageView

                android:layout_width="@dimen/action_bar_items_length"
                android:layout_height="@dimen/action_bar_items_length"
                android:id="@+id/imageView_more"
                android:background="@drawable/selector_action_bar_more" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/action_bar_custome_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_gradiant_down"
                android:gravity="right|center_vertical"
                android:layout_alignParentEnd="true">

                <ir.rasen.charsoo.ui.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/followers"
                    android:textSize="@dimen/font_size_header"
                    android:layout_marginRight="15dp"
                    android:id="@+id/textView_followers"
                    android:textColor="@color/White" />

                <ir.rasen.charsoo.ui.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reviews"
                    android:id="@+id/textView_reviews"
                    android:textSize="@dimen/font_size_header"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/White" />

                <ir.rasen.charsoo.ui.TextViewFont
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_header"
                    android:text="@string/call_info"
                    android:layout_marginRight="5dp"
                    android:id="@+id/textView_contact_info"
                    android:textColor="@color/White" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_footer_blank"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="@dimen/header_switch_footer_hight_halft"
                android:background="@color/White"
                android:layout_alignParentBottom="true" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/header_switch_hight"
            android:layout_height="@dimen/header_switch_hight"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true">

            <ir.rasen.charsoo.ui.ImageViewCircle
                android:layout_width="@dimen/header_switch_hight"
                android:layout_height="@dimen/header_switch_hight"
                android:id="@+id/imageView_cirecle"
                android:src="@color/Red" />

            <ImageView
                android:id="@+id/imageView_switch"
                android:layout_width="@dimen/header_switch_inner_item_hight"
                android:layout_height="@dimen/header_switch_inner_item_hight"
                android:layout_centerInParent="true"
                android:src="@drawable/selector_header_swtich_list" />
        </RelativeLayout>



    </RelativeLayout>
</LinearLayout>
